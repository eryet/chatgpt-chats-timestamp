{
  "manifest_version": 3,
  "name": "ChatGPT Chats Timestamp",
  "version": "1.2",
  "description": "Adds created timestamps under each ChatGPT sidebar conversation for quick reference.",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["main.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "permissions": []
}
